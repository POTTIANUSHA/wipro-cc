
public class MyFstJavaCode {
	int x;
	static boolean y;
	
	
	void disp(){
		byte z;//local vars dont have def values
		//must be initilized b4 its use
		System.out.println(x);
	System.out.println(y);
	z=40;
		System.out.println(z);
		
	}
	
	
	void abc()
	{
		System.out.println(y);
		System.out.println(x);
		//System.out.println(z);
		//local vars can be accessed only within the function wer de r declared

	}
	
	public static void main(String[] args) {

		new MyFstJavaCode().disp();	
		
	}
	
	
}


// instance var , class var , local var 

